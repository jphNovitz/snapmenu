{% extends 'base.html.twig' %}

{% block title %}{% trans %}title.category.edit {% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}title.category.edit {% endtrans %}</h1>
    {{ include('admin/category/_form.html.twig', {'button_label': 'button.update'}) }}

    {% if form.rowOrder is defined %}
        {% include 'admin/category/_activate_form.html.twig' with {'button_label': 'button.deactivate'} %}
    {% else %}
        {% include 'admin/category/_activate_form.html.twig' with {'button_label': 'button.activate'} %}
    {% endif %}
    <div class="flex space-x-8 my-8">
        <a href="{{ path('admin_category_index') }}"
           class="border border-gray-400 rounded-sm px-4 py-1">{% trans %} button.back {% endtrans %}</a>
        {% if form.name is defined %}
            {{ include('admin/category/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
