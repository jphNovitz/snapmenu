{% extends 'base.html.twig' %}

{% block title %}Store index{% endblock %}

{% block body %}
    <h1>Store index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>VatNumber</th>
                <th>PhoneNumber</th>
                <th>Description</th>
                <th>Logo</th>
                <th>StreetName</th>
                <th>HouseNumber</th>
                <th>PostCode</th>
                <th>City</th>
                <th>Email</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for store in stores %}
            <tr>
                <td>{{ store.id }}</td>
                <td>{{ store.name }}</td>
                <td>{{ store.vatNumber }}</td>
                <td>{{ store.phoneNumber }}</td>
                <td>{{ store.description }}</td>
                <td>{{ store.logo }}</td>
                <td>{{ store.streetName }}</td>
                <td>{{ store.houseNumber }}</td>
                <td>{{ store.postCode }}</td>
                <td>{{ store.city }}</td>
                <td>{{ store.email }}</td>
                <td>{{ store.slug }}</td>
                <td>
                    <a href="{{ path('app_admin_store_store_show', {'id': store.id}) }}">show</a>
                    <a href="{{ path('app_admin_store_store_edit', {'id': store.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_store_store_new') }}">Create new</a>
{% endblock %}
