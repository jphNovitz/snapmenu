<form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}"
      onsubmit="return confirm('{% trans %}form.delete.confirm{% endtrans %}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">

    <button class="border border-gray-400 rounded-sm px-4 py-1">{{ button_label|default('button.delete')|trans }}</button>
</form>
