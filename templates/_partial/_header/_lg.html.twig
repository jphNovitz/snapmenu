                <a href="{{ path('app_default') }}">{% trans %}nav.home {% endtrans %}</a></li>
            <li>
                <a href="{{ path('app_menu', {'slug': globalStore.slug, '_fragment': 'menu'}) }}">{% trans %}nav.menu {% endtrans %}</a>
            </li>
            <li>
                <a href="{{ path('app_menu', {'slug': globalStore.slug, '_fragment': 'heures-d-ouverture'}) }}">{% trans %}nav.opening {% endtrans %}</a>
            </li>
            <li>
                <a href="{{ path('app_menu', {'slug': globalStore.slug, '_fragment': 'contact'}) }}">{% trans %}nav.contact_infos {% endtrans %}</a>
            </li>

            <li class="ml-4 opacity-80">
                {% if app.user is null %}
                    <a href="{{ path('app_login') }}"> {% trans %} nav.login{% endtrans %}</a>
                {% else %}
                    <a href="{{ path('admin_default') }}">  {% trans %} nav.admin {% endtrans %}</a>
                    <a href="/logout">  {% trans %} nav.logout {% endtrans %}</a>Âµ
