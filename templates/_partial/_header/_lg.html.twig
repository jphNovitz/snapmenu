<div class="hidden max-w-7xl m-auto lg:grid grid-cols-12 ">
    <div id="brand" class="col-span-3  text-left flex !items-baseline space-x-4 text-content-secondary/70">
        {% if globalStore is defined %}
            {% if globalStore.logoName is not null %}
                <a href="{{ path('app_menu', {slug: globalStore.slug}) }}"
                   class="w-24 aspect-video">
                    <img src="{{ asset('images/stores/' ~ globalStore.logoName) }}"
                         class="w-full"
                         alt="{{ globalStore.name }} |Snapmenu.be">
                </a>
            {% else %}
                <div class="capitalize">{{ globalStore.name }}</div>
            {% endif %}
        {% else %}
            <a href="{{ path('app_default') }}"> Snap<strong>Menu</strong> </a>
        {% endif %}
        {# {% if globalStore.name is defined %}
                    <twig:Title:H1 class="capitalize">{{ globalStore.name }}</twig:Title:H1>
                {% endif %}
                <a href="{{ path('app_default') }}"> Snap<strong>Menu</strong> </a> #}
