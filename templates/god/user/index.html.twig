{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table w-full space-y-4">
        <thead>
            <tr class="text-left border-b  border-b-2 border-b-dark-neutral dark:border-b-light-neutral">
                <th>Id</th>
                <th>Email</th>
                <th>IsVerified</th>
                <th>Is_active</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td> {{ include('god/user/_toggle_form.html.twig', {'status': user.isActive}) }}</td>
                <td>{{ user.created ? user.created|date('Y-m-d') : '' }}</td>
                <td>{{ user.updated ? user.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('god_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('god_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('god_user_new') }}">Create new</a>
{% endblock %}
