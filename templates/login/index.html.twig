{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{% trans %}title.login {% endtrans %} | snapmenu.be{% endblock %}

{% block body %}
    <div class="my-16 p-8 space-y-16 m-auto w-11/12 md:max-w-96 bg-surface-light  dark:bg-surface-dark/90  border border-surface-light/50 dark:border-surface-light/50 rounded-md">
        <twig:Title:H1>{% trans %}title.login{% endtrans %}</twig:Title:H1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="flex flex-col space-y-8">
            <div class="grid gap-6 mb-6">
                <div>
                    <label for="email"
                           class="block mb-2 text-sm font-medium text-content-primary-light dark:text-content-primary-dark"> {% trans %}form.email{% endtrans %} </label>
                    <input type="text" id="email" name="_username" value="{{ email }}"
                           class="bg-white border border-dark-neutral/50 text-content-primary-light text-sm rounded-lg focus:ring-dark-neutral focus:border-dark-neutral focus-visible:ring-dark-neutral block w-full p-2.5 dark:bg-surface-light/70 dark:border-surface-light/40 dark:placeholder-gray-400 dark:text-content-primary-light dark:focus:ring-surface-light/40 dark:focus-visible:ring-surface-light/40 dark:focus:border-surface-light/40"
                           required/>
                </div>
                <div>
                    <label for="password"
                           class="block mb-2 text-sm font-medium text-content-primary-light dark:text-content-primary-dark"> {% trans %}form.password{% endtrans %} </label>
                    <input type="password" id="password" name="_password"
                           class="bg-white border border-dark-neutral/50 text-content-primary-light text-sm rounded-lg focus:ring-dark-neutral focus:border-dark-neutral focus-visible:ring-dark-neutral block w-full p-2.5 dark:bg-surface-light/70 dark:border-surface-light/40 dark:placeholder-gray-400 dark:text-content-primary-light dark:focus:ring-surface-light/40 dark:focus-visible:ring-surface-light/40 dark:focus:border-surface-light/40"
                           required/>
                </div>
                <div class="w-full flex flex-col md:flex-row md:justify-center space-y-4 space-x-0 md:space-y-0 md:space-x-4 pt-8">
                    <twig:Button:Submit> {% trans %}button.login{% endtrans %} </twig:Button:Submit>
                    <twig:Button:Secondary
                            href="{{ path('app_register') }}"> {% trans %}button.register{% endtrans %} </twig:Button:Secondary>
                </div>
            </div>
        </form>

    </div>
{% endblock %}